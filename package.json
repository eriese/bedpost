{
  "name": "bedpost",
  "private": true,
  "dependencies": {
    "@rails/ujs": "^6.0.0-alpha",
    "@rails/webpacker": "^4.0.7",
    "css-loader": "^3.1.0",
    "flickity": "^2.2.0",
    "gsap": "^2.0.2",
    "jsdoc-vuejs": "^2.4.1",
    "rails-erb-loader": "^5.5.2",
    "v-calendar": "^1.0.0-beta.16",
    "vue": "^2.6.10",
    "vue-loader": "^15.7.1",
    "vue-select": "^3.1.0",
    "vue-template-compiler": "^2.6.10",
    "vue-turbolinks": "^2.0.4",
    "vuelidate": "^0.7.4",
    "webpack": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.9.0",
    "babel-preset-flow": "^6.23.0",
    "flow-bin": "^0.93.0",
    "jest": "^24.9.0",
    "vue-jest": "^3.0.4",
    "webpack-dev-server": "^3.7.2"
  },
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "globals": {
      "vue-jest": {
        "babelConfig": {
          "presets": [
            [
              "env",
              {
                "modules": false,
                "targets": {
                  "browsers": "> 1%",
                  "uglify": true
                },
                "useBuiltIns": true
              }
            ]
          ],
          "env": {
            "test": {
              "presets": [
                [
                  "env",
                  {
                    "targets": {
                      "node": "current"
                    }
                  }
                ]
              ]
            }
          }
        }
      }
    },
    "roots": [
      "<rootDir>/app/javascript/tests"
    ],
    "verbose": true,
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/app/javascript"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^@components/(.*)$": "<rootDir>/app/javascript/components/$1",
      "^@mixins/(.*)$": "<rootDir>/app/javascript/mixins/$1",
      "^@modules/(.*)$": "<rootDir>/app/javascript/modules/$1"
    },
    "transform": {
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,vue}"
    ]
  }
}
