<div class="login">
  <h1>Change your password</h1>
  <%= vuelidate_form_for(resource, as: resource_name, url: password_path(resource_name), require_all: true, html: { method: :put, class: "big centered"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", show_toggle: true %>
    <%= f.submit "Change my password" %>
    <div class="additional">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
