<% body_class  'is-flesh-contrast' %>
<h1><%= t('.title') %></h1>
<h2 class="desc"><%= t('.title_desc', tested_on: l(@sti_test.tested_on, format: :long_date)) %></h2>

<table class="table table--is-list-display container--is-centered test-results" >
	<tr>
		<th class="table--is-list-display__header" scope="col"><%= t('.tested_for') %></th>
		<th class="table--is-list-display__header" scope="col"><%= t('.result') %></th>
	</tr>
	<% @sti_test.results.each do |res| %>
		<tr class="test-results__result--is-<%= res.positive ?  'positive' : 'negative' %>">
			<th class="table--is-list-display__cell" scope="row"><%= t(res.tested_for_id, scope: 'diagnosis.name_formal') %></td>
			<td class="table--is-list-display__cell"><%= t(res.positive ? '.poz' : '.neg') %></td>
		</tr>
	<% end %>
</table>

<%= link_to t(".edit"), edit_sti_test_path(@sti_test), {class: 'cta--is-floating-right cta cta--is-round'} %>
