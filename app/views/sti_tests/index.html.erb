<div class="right">
  <div id="wrapper">
    <% @sti_tests.each do |sti_test| %>
      <%= link_to sti_test.date_taken, sti_test_path(sti_test) %><br>
    <% end %>
    <br>
    <br>
    <%= link_to "Add a test", new_sti_test_path %>
  </div>
</div>
<div class="dashes"></div>
<div class="center">
  <h1><%= "#{@user.name} (#{@user.pronoun})" %></h1>
    <br>
    <% if @overdue_list.any? %>
      <span class="alert">Warning: you are overdue for testing for some infections. They are marked in red below. To change your preferred testing frequency, <%= link_to "edit your profile settings", edit_profile_path(@user) %>.</span>
    <% end %>
    <br>
    <br>
    <strong>Check your risk of infections:</strong>
    <br>
    <br>
    <ul>
      <% @categories.each do |category, info| %>
        <li class="bubble">
          <span class="category"><strong><%= category.upcase %></strong>
          <br>
          <%= info[:description] %></span>
          <ul class="scroller">
            <% info[:diseases].each do |disease| %>
              <% if @overdue_list.include?(disease) %>
              <li class="disease alert">
              <% else %>
              <li class="disease">
              <% end %>
                <%= @diseases.find{|d| d[:name] == disease}[:readable]%>
                <span class="risk">â€” at risk from:
                  <% if @user.risk_window(disease) %>
                    <%= time_ago_in_words(@user.risk_window(disease)) %> ago, on <%= @user.risk_window(disease).strftime('%m/%d/%Y') %>
                  <% else %>
                    unknown. Consider yourself at risk and get tested.
                  <% end %>
                  </span></li>

            <% end %>
          </ul>
        </li>
        <br>
      <% end %>
    </ul>
</div>
