<div class="center">
  <h2>Encounter with <%= @partner.name %><span class="help plus"><a href=<%= edit_encounter_path(@encounter) %>><%= image_tag "pencil.png", alt: "edit encounter" %></a></span><span class="help plus"><a href=<%= "/encounters/#{@encounter.id}/recommendations" %>><%= image_tag "directions.png", alt: "What now?" %></a></span></h2>
  <hr>
  Date: <%= @encounter.took_place %><br>
  Self-assessed risk level:
  <%= @encounter.self_risk %><br>
  App-assessed risk level:
  <% if @encounter.risk <= 4 %>
    <span class="low">low</span>
  <% elsif @encounter.risk <= 8 %>
    <span class="medium">medium</span>
  <% else %>
    <span class="high">high</span>
  <% end %><br>
  Notes: <%= @encounter.notes %><br>
  Fluid exchange: <%= @encounter.fluid %> <br>
  <br>
  <% @possibilities.each do |inst, contact_types| %>
    <% contact_types.each do|c_type, insts| %>
      <% insts[:partner_instruments].each do |p_instrument| %>
        <% if @encounter.has_contact?(insts[:user_instrument], p_instrument) %>
          <div class="bubble">
            <div class="six-hundred">
              Your
              <span class="highlight">
                <% if inst == :genitals && !@user.genital_name.empty? %>
                  <%= @user.genital_name%>
                <% elsif inst == :anus && !@user.anus_name.empty?%>
                  <%= @user.anus_name%>
                <% else %>
                  <%= inst %>
                <% end %>
              </span>
              <% if c_type == "was penetrated by" && (insts[:user_instrument] == :toys || (insts[:user_instrument] == :genitals && (@user.genital_name.empty? || @user.genital_name.last == "s")))%>
                were penetrated by
              <% else %>
                <%= c_type %>
              <% end %>
              <%= @pronoun[:possessive] %>
              <span class="highlight">
                <% if (p_instrument == :genitals || p_instrument == :genitals_penetrative) && !@partner.genital_name.empty?%>
                  <%= @partner.genital_name %>
                <% elsif p_instrument == :anus && !@partner.anus_name.empty? %>
                  <%= @partner.anus_name  %>
                <% elsif p_instrument == :hand_penetrative %>
                  hand
                <% else %>
                  <%= p_instrument %>
                <% end %>
              </span>
              <% if @encounter.has_barriers?(insts[:user_instrument], p_instrument) %>
                <%= "with a barrier" %>
              <% else %>
                <%= "without a barrier" %>
              <% end %>
              <div class="risk-assoc hidden">
                Risk associated with this contact:
                <br>
                <% Disease.risk_by_contact({user_instrument: insts[:user_instrument], partner_instrument: p_instrument, barriers?: @encounter.has_barriers?(insts[:user_instrument], p_instrument)}).each do |risk, diseases| %>
                  <% if diseases.any? %>
                    <% case risk %>
                    <% when 1 %>
                      <span class="low">Low</span>
                    <% when 2 %>
                      <span class="medium">Medium</span>
                    <% when 3 %>
                      <span class="high">High</span>
                    <% end %>
                    :
                    <%= diseases.join(", ") %>
                    <br>
                  <% end %>
                <% end %>
              </div>
            </div>
            <span class="help therm"><%= image_tag "thermometer.png", alt: "risks associated with this contact" %></span>
          </div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <br><br>
  <%= form_tag "/best_test", method: :get, id: "time-form" %>
  When is the
  <%= select_tag :time_type, options_for_select(["best", "earliest"]) %>
  possible time for me to get tested for
  <%= hidden_field_tag :encounter_id, @encounter.id %>
  <%= select_tag :d_name, options_from_collection_for_select(@diseases, "name", "readable") %>
  <%= submit_tag "Calculate" %>
  <br>
  <div class="results"></div>
</div>
