<div class="center">
  <h2><%= "#{@partner.name} (#{@partner.pronoun})" %> <span class="help plus"><a href=<%= new_encounter_path(partner_id: @partnership.partner_id) %>><%= image_tag "plus.png", alt: "new encounter" %></a></span><span class="help plus"><a href=<%= edit_partnership_path(@partnership) %>><%= image_tag "pencil.png", alt: "edit partnership" %></a></span></h2>
  <hr>
  Exclusivity: <%= @partnership.exclusivity %> |
  Trust level: <%= @partnership.familiarity %> |
  Communication level: <%= @partnership.communication %>
  <br>
  <br>
  <% @encounters.each do |encounter| %>
      <div class="bubble partner">
        <%= link_to encounter.took_place, encounter_path(encounter)%><br>
        Self-assessed risk:
        <%= encounter.self_risk%><br>
        App-assessed risk:
        <% if encounter.risk <= 4 %>
            <span class="low">low</span>
          <% elsif encounter.risk <= 8 %>
            <span class="medium">medium</span>
          <% else %>
            <span class="high">high</span>
          <% end %><br>
        Notes: <%= encounter.notes %><br>

      </div>
      <br>
    <% end %>
    <br>
    <%= link_to "new encounter", new_encounter_path(partner_id: @partnership.partner_id) %>
</div>
