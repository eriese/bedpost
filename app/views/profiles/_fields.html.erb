<h2 class="with-desc"><%= t_action(".personal_prefs.title") %></h2>
<p class="description"><%= t_action(".personal_prefs.desc") %></p>
<%= f.select :pronoun, options_from_collection_for_select(pronouns, :id, :display), {}, {tooltip: true}%>
<%= f.text_field :anus_name, tooltip: true %>
<%= f.text_field :external_name, tooltip: true %>
<%= f.toggle :internal_name, {label: :show_internal, tooltip: true}, {:":clear" => true, :":clear-on" => "[false]"}%>
<%= f.text_field :internal_name, :"v-show" => "toggles['internal_name']"%>
