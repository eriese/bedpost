<%= content_tag :"form-stepper", options.merge(:"@stepper-mounted" => "vf.addStepper")  do %>
	<%= content_tag :div, :"slot-scope" => "stepper" do %>
		<%= yield %>
	<% end %>
	<% if content_for? :last_button %>
		<%= content_tag :span, slot: "last-button", "slot-scope" => "{onClick}" do %>
			<%= yield :last_button %>
		<% end %>
	<% end %>
<% end %>
